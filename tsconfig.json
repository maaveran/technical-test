{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "pretty": true,
    "sourceMap": true,
    "target": "es6",
    "lib": ["dom", "esnext"],
    "noImplicitAny": false,
    "esModuleInterop": true,
    "outDir": "./dist",
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "typeRoots": ["node_modules/@types"]
  },
  "include": [
    "src/**/**/*.ts", 
    "environment.d.ts"    
  ],
  "exclude": [
    "node_modules"
  ]
}
